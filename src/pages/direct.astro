  /* tidak ada import JS atau import gambar */
  import "../assets/styles/global.css";
  ---

  <!doctype html>
  <html lang="en">
    <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />

      <title>Tokoh</title>

      <link rel="stylesheet" href="/asset/style.css" />
      <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
      <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    </head>

    <body style="margin:0">
      <section id="dir_main" class="font_ppmori">
        <!-- akan diisi oleh JS -->
        <div id="dir_sidebar-sticky"></div>
        <div id="dir_description-list"></div>
      </section>

      <!-- ðŸ”¥ INLINE JS â†’ 100% jalan di Astro -->
      <script is:client>
        // Load data dari public
        import("/data/data.js").then(({ default: data }) => {
          const sidebarSticky = document.getElementById("dir_sidebar-sticky");
          const descriptionList = document.getElementById("dir_description-list");

          const parameter = new URLSearchParams(window.location.search);
          const id = parseInt(parameter.get("id"));
          const item = data.find((item) => item.id === id);

          if (item) {
            sidebarSticky.innerHTML = `
              <div class="x-spacing-wrapper">
                <div class="sidebar-sticky-img-wrapper">
                  <div class="sidebar-sticky-img-container"
                    style="background-image: url('${item.image.src}');">
                  </div>
                </div>
                <div class="dir_peran_wrapper">
                  <h1 class="dir_title_font font_arges">${item.title}</h1>
                  <p class="dir_description_peran">${item.peran}</p>
                </div>
              </div>
            `;

            item.deskripsi.forEach((items, index) => {
              const isLast = index === item.deskripsi.length - 1;

              const listItemsComponent = document.createElement("div");
              listItemsComponent.classList.add("list_items");

              listItemsComponent.innerHTML = `
                <div class="list_indicator">
                  <img src="/assets/icon/${isLast ? "list.svg" : "list-fill.svg"}"
                      width="28" class="listdot_icon" />

                  ${!isLast ? '<div class="line_list"></div>' : ""}
                </div>

                <div class="list_content">
                  <p>${items}</p>
                </div>
              `;

              descriptionList.appendChild(listItemsComponent);
            });
          } else {
            sidebarSticky.textContent = "Tidak tersedia.";
          }
        });
      </script>

      <!-- MUSIC -->
      <script is:client type="module" src="../scripts/playMusic.js"></script>
      <script is:client src="../scripts/musicPlayer.js"></script>
      <script>
        import AOS from "aos";
        AOS.init();
      </script>
    </body>
  </html>
