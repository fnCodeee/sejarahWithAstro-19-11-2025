<section id="hero">
  <div class="heading-hero">
    <h1 class="arges-heading" style="padding: 0; margin: 0">Suara Perubahan dari Jalanan:</h1>
    <h1 class="arges-heading" style="padding: 0; margin: 0">Mengenang Reformasi 1998</h1>
    <div class="button-container">
      <button id="button_jelajah" class="hero-btn">Jelajahi</button>
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { SplitText } from "gsap/SplitText";

  gsap.registerPlugin(SplitText);

  const heading = document.querySelectorAll(".heading-hero h1");

  const split1 = new SplitText(heading[0], { type: "words" });
  const split2 = new SplitText(heading[1], { type: "words" });

  // Timeline
  const tl = gsap.timeline();

  tl.from(split1.words, {
    y: 100,
    opacity: 0,
    stagger: 0.1,
    duration: 2,
    ease: "power3.out",
  })
  
    .from(split2.words, {
      y: 100,
      opacity: 0,
      stagger: 0.1,
      duration: 2,
      ease: "power3.out",
    },"-=1.5" );

</script>